{
    "name": "peso/moneyphp-exchange",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Peso\\Money\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peso\\Money\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "arokettu/date": "^2.3",
        "moneyphp/money": "^4.1",
        "peso/core": "^0.1 | ^0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2025.05.07",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^6.12"
    }
}
